<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cn.edu.bistu.cs.se.testcalculate.ScienceCalculateActivity"
    tools:showIn="@layout/activity_science_calculate">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_gravity="left"
            android:text="+"
            android:background="@drawable/menu_shape"
            android:id="@+id/s_menu_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="@drawable/shape"
            android:layout_below="@+id/s_menu_btn"
            android:layout_marginTop="20dp"
            android:id="@+id/science_linearLayout"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="12dip" >
            <!-- android:layout_marginTop="24dp"-->

            <TextView
                android:id="@+id/science_input_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:textColor="#1B1D20"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/science_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:textColor="#1B1D20"
                android:textSize="20sp" />
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_below="@id/science_linearLayout"
            android:columnCount="4"
            android:rowCount="9"
            android:id="@+id/gridLayout">

            <Button
                android:id="@+id/s_c_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="C" />

            <Button
                android:id="@+id/s_del_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="fill_horizontal"
                android:text="DEL" />

            <Button
                android:id="@+id/s_left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:text="@string/left" />

            <Button
                android:id="@+id/s_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:text="@string/right"
                />

            <Button
                android:id="@+id/s_sin_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:textAllCaps="false"
                android:text="sin"/>

            <Button
                android:id="@+id/s_cos_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:textAllCaps="false"
                android:text="cos" />

            <Button
                android:id="@+id/s_tan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:textAllCaps="false"
                android:text="tan" />

            <Button
                android:id="@+id/s_divide_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"
                android:text="@string/divide" />

            <Button
                android:id="@+id/s_sqrt_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="@string/sqrt" />

            <Button
                android:id="@+id/s_square_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="@string/square" />

            <Button
                android:id="@+id/s_lg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:textAllCaps="false"
                android:text="@string/lg" />

            <Button
                android:id="@+id/s_multply_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="3"
                android:text="@string/multply" />

            <Button
                android:id="@+id/s_7_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="@string/seven" />

            <Button
                android:id="@+id/s_8_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:text="@string/eight" />

            <Button
                android:id="@+id/s_9_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="4"
                android:text="@string/nine"
                />

            <Button
                android:id="@+id/s_equal_btn"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_row="7"
                android:layout_column="3"
                android:text="@string/equal"
                android:layout_rowSpan = "2"  />

            <Button
                android:id="@+id/s_sub_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="6"
                android:text="@string/sub" />

            <Button
                android:id="@+id/s_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="4"
                android:text="@string/add" />

            <Button
                android:id="@+id/s_6_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:text="@string/six"
                />

            <Button
                android:id="@+id/s_5_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"
                android:text="@string/five" />

            <Button
                android:id="@+id/s_4_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="6"
                android:text="@string/four" />

            <Button
                android:id="@+id/s_3_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:text="@string/three" />

            <Button
                android:id="@+id/s_2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="7"
                android:text="@string/two" />

            <Button
                android:id="@+id/s_0_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="8"
                android:text="@string/zero"
                android:layout_columnSpan="2" />

            <Button
                android:id="@+id/s_1_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="7"
                android:text="@string/one" />

            <Button
                android:id="@+id/s_point_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="8"
                android:text="@string/point" />
        </GridLayout>

    </LinearLayout>

</RelativeLayout>
